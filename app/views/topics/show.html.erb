<!DOCTYPE html>

<html>

<body class = "background">
	<div class="topBar">
		<h1>Toppy</h1>
		<%= @topic.name %>
	</div>

	<% @topic.posts.each do |post| %>
	<div class="posts">
		<div class="title">
			<p>
				<%= post.title %>
			</p>
		</div>

		<div class="text">
			<p>
				<%= post.text %>
			</p>
		</div>
	</div>
	<% end %>

	<div class=form>
		<h2>Add a Post</h2>
		<%= form_for([@topic, @topic.posts.build]) do |f| %>
		<p>
			<%= f.label :title %> <br>
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.label :text %><br>
			<%= f.text_area :text%>
		</p>
		<p>
			<%= f.submit %>
		</p>
		<% end %>
		<%= link_to 'Topic List', topics_path %>
	</div>
</body>
</html>
